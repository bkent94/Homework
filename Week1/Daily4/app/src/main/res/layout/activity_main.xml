<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <TextView

        android:id="@+id/calcInput"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text=""

        />

    <TextView

        android:id="@+id/calcOutput"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_above="@id/grid"
        android:layout_toRightOf="@+id/calcInput"
        android:text=""

        />
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calcInput"
        android:numColumns="auto_fit"
        android:columnWidth="10sp"
        android:verticalSpacing="10sp"
        android:horizontalSpacing="10sp"
        android:columnCount="4"

        >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="1"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="Number_Click"
            />
        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:onClick="Number_Click"

            />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Operator_Click"
            android:text="+"

            />
        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Operator_Click"
            android:text="-"

            />
        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Operator_Click"
            android:text="*"

            />
        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Operator_Click"
            android:text="/"

            />
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Operator_Click"
            android:text="C"

            />

        <Button
            android:id="@+id/buttonSquared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x^2"
            android:onClick="Operator_Click"
            android:visibility="gone"

            />
        <Button
            android:id="@+id/buttonSIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sin"
            android:onClick="Operator_Click"
            android:visibility="gone"

            />
        <Button
            android:id="@+id/buttonCOSINE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cos"
            android:onClick="Operator_Click"
            android:visibility="gone"

            />
        <Button
            android:id="@+id/buttonTANGNT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tan"
            android:onClick="Operator_Click"
            android:visibility="gone"

            />
    </GridLayout>
</RelativeLayout>